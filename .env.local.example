# Gemini API
GEMINI_API_KEY=your_gemini_api_key

# Azure OpenAI (GPT-5 Models)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# Optional: defaults to 2024-10-21 (latest GA version)
# AZURE_OPENAI_API_VERSION=2024-10-21

# Azure Deployment Names - GPT-5 Models (map to your Azure deployment names)
AZURE_OPENAI_DEPLOYMENT_GPT5=gpt-5
AZURE_OPENAI_DEPLOYMENT_GPT5_MINI=gpt-5-mini
AZURE_OPENAI_DEPLOYMENT_GPT5_NANO=gpt-5-nano
AZURE_OPENAI_DEPLOYMENT_GPT5_CHAT=gpt-5-chat

# DialX (AI DIAL) - Model Aggregator
# Access models from OpenAI, Anthropic, Google, Meta, Mistral via unified API
DIALX_API_KEY=your_dialx_api_key
# Optional: defaults to https://ai-proxy.lab.epam.com
# DIALX_ENDPOINT=https://ai-proxy.lab.epam.com
# Optional: defaults to 2024-02-01
# DIALX_API_VERSION=2024-02-01

# MongoDB (use docker-compose up -d to start)
MONGODB_URI=mongodb://localhost:27017/agoryx-chat

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-in-production

# Optional: Google OAuth (for future implementation)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# Database Seeding (required for production seeding)
# ADMIN_PASSWORD=secure-admin-password
# SYSTEM_USER_PASSWORD=secure-system-password
